<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_workout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/rvWorkout_tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/rvWorkout_ivMore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Flexão" />

        <TextView
            android:id="@+id/rvWorkout_tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            app:layout_constraintStart_toStartOf="@id/rvWorkout_tvName"
            app:layout_constraintTop_toBottomOf="@id/rvWorkout_tvName"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="É um exercício físico realizado em posição de prancha" />

        <TextView
            android:id="@+id/rvWorkout_tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/purple_500"
            app:layout_constraintTop_toBottomOf="@id/rvWorkout_tvDescription"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="10-04-19 12:00:17" />

        <ImageView
            android:id="@+id/rvWorkout_ivMore"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/rvWorkout_tvName"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_workout_activity_iv_more"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>