<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andcris.lealappschallenge">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LealAppsChallenge">
        <activity android:name=".presentation.activities.AddEditWorkoutActivity"
            android:label="@string/add_edit_workout_tb_add"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.activities.WorkoutActivity"
            android:label="@string/home_activity_bt_workouts"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.activities.HomeActivity"
            android:label="@string/home_activity_tb_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>